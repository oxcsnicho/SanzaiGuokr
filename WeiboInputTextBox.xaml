<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="SanzaiWeibo.Controls.WeiboInputTextBox"
	d:DesignWidth="456" d:DesignHeight="229">

	<Grid x:Name="LayoutRoot" Background="Transparent">
		<StackPanel x:Name="panel" Orientation="Vertical" Margin="0,0,0,-38">
			<TextBox Height="229" HorizontalAlignment="Left" x:Name="text_box" VerticalAlignment="Top" Width="456" TextWrapping="Wrap" TextChanged="text_box_TextChanged" VerticalScrollBarVisibility="Visible" InputScope="Text" Tap="text_box_Tap"/>
			<TextBlock x:Name="status_bar" TextWrapping="Wrap" Margin="8,0" Foreground="{StaticResource PhoneForegroundBrush}"/>
		</StackPanel>
	</Grid>
</UserControl>